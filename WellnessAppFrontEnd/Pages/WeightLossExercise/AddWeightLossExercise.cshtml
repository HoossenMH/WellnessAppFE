            @Html.EditorFor(model => model.WeightLossExercise_Reps, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.WeightLossExercise_Reps, "", new { @class = "text-danger" })
        </div>
    </div>
</div>

