                "height": $('#Height').val(),
                "BMI": $('#BMI').val(),
                "bloodPressure": $('#BloodPressure').val(),
            };

            var data_json = JSON.stringify(newFitnessBio);

            $.ajax({
                url: 'http://localhost:3308/fitnessBios/fitnessBio/' + queryString,
